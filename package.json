{
  "name": "scratch-project",
  "version": "0.0.1",
  "private": true,
  "description": "CodeSmith scratch project.",
  "main": "server.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "start": "cross-env NODE_ENV=production nodemon server/server.js",
    "dev": "cross-env NODE_ENV=development concurrently \"webpack serve\" \"nodemon --watch server server/server.js\"",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ftri4-wunderpuss/scratch-project.git"
  },
  "keywords": [
    "React",
    "Redux",
    "Express",
    "SQL"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime"
    ],
    "env": {
      "es2021": true,
      "node": true,
      "jest": true,
      "browser": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",
      "react/prop-types" : "off"
    }
  },
  "author": "Miguel Hernandez (miguelh72@outlook.com)",
  "bugs": {
    "url": "https://github.com/ftri4-wunderpuss/scratch-project/issues"
  },
  "homepage": "https://github.com/ftri4-wunderpuss/scratch-project#readme",
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.1",
    "express": "^4.17.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.26.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "image-webpack-loader": "^8.0.1",
    "jest": "^27.2.4",
    "mini-css-extract-plugin": "^2.3.0",
    "nodemon": "^2.0.13",
    "sass": "^1.42.1",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.3.0",
    "webpack": "^5.56.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^3.11.2"
  }
}
